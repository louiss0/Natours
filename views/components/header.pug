header(class="header")
        
    nav(class="nav nav--tours")

        a(href="/" class="nav__el") All tours
        
        form(class="nav__search")
            button(class="nav__search-btn")            
                svg
                    use(href="#icon-search")
            
        
            input(type="text" placeholder="Search tours" class="nav__search-input")

    div(class="header__logo")
        img(src="/img/logo-white.png" alt="Natours logo")
    
    nav(class="nav nav--user")

        if user
            - userFirstName = user.name.split(" ")[0] 
            a(href="#" id="nav__el--logout" class="nav__el nav__el--cta") Log Out
            a(href="/me" class="nav__el")
                img(src=`/img/users/${user.photo}` alt=`Photo of ${userFirstName}` class="nav__user-img") 
            
            span #{userFirstName}
        else
            a(href="/login" class="nav__el") Log in
            a(href="#" class="nav__el nav__el--cta") Sign up 